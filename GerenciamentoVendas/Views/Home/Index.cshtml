<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <title>Gerenciador Vendas</title>
    <link rel="stylesheet" href="./css/style.css">
    <style>
        .tabelas {
            margin-top: 50px;
            text-align: center;            
        }
    </style>
</head>



<body>
    <div class="container">
        <div class="row">

            <div class="col-6 tabelas">
                <h5>Usuários Cadastrados</h5>
                <table class="table table-dark table-striped table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <th>Região</th>
                            <th>Data de Atualização</th>
                        </tr>
                    </thead>
                    <tbody id="tableDadosUsuario">
                    </tbody>
                </table>
            </div>

            <div class="col-6 tabelas">
                <h5>Clientes Cadastrados</h5>
                <table class="table table-dark table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Nome</th>
                            <th>Cnpj</th>
                            <th>Razão Social</th>
                            <th>Valor Monetário</th>
                            <th>Atividades</th>
                            <th>Usuário Responsável</th>
                        </tr>
                    </thead>
                    <tbody id="tableDadosClientes">
                    </tbody>
                </table>
            </div>
        </div>
    </div>


    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>

        async function init() {
            //Usuario cadastrados
            const dadosUsuario = await BuscarUsuarios();
            MontarTabelaUsuario(dadosUsuario);

            //Clientes cadastrados
            const dadosClientes = await BuscarClientes();
            MontarTabelaClientes(dadosClientes);
        }

        //Usuarios cadastrados
        async function BuscarUsuarios() {
            const url = "/api/Usuario";
            const dados = await axios.get(url).then(result => {
                return result.data;
            });

            return dados;
        }

        function MontarTabelaUsuario(dadosUsuario) {
            const tabelas = document.getElementById("tableDadosUsuario");

            for (var i = 0; i < dadosUsuario.length; i++) {
                const tr = document.createElement('tr');

                let array = [
                    dadosUsuario[i].id,
                    dadosUsuario[i].nome,
                    dadosUsuario[i].email,
                    dadosUsuario[i].regioes,
                    dadosUsuario[i].dataAtualizacaoRegiao,
                ];

                array.forEach(function (valor) {
                    const td = document.createElement('td');
                    td.innerHTML = valor;
                    tr.appendChild(td)
                });

                tabelas.appendChild(tr)
            }

        }

        //Clientes cadastrados
        async function BuscarClientes() {
            const url = "/api/ClientePessoaJuridica";
            const dados = await axios.get(url).then(result => {
                console.log(result.data);
                return result.data;
            });

            return dados;
        }

        function MontarTabelaClientes(dadosClientes) {
            const tabelas = document.getElementById("tableDadosClientes");

            for (var i = 0; i < dadosClientes.length; i++) {
                const tr = document.createElement('tr');

                let array = [
                    dadosClientes[i].id,
                    dadosClientes[i].nome,
                    dadosClientes[i].cnpj,
                    dadosClientes[i].razaoSocial,
                    dadosClientes[i].valorMonetario,
                    dadosClientes[i].atividades,
                    dadosClientes[i].usuario.nome,
                ];

                array.forEach(function (valor) {
                    const td = document.createElement('td');
                    td.innerHTML = valor;
                    tr.appendChild(td)
                });

                tabelas.appendChild(tr)
            }

        }
        init();
    </script>
</body>



</html>
